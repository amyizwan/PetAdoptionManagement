@model PetAdoptionManagement.Models.Adopter

@{
    ViewData["Title"] = "Delete Adopter";
}

<h2>Are you sure you want to delete this adopter?</h2>

<dl class="row">
    <dt class="col-sm-2">Full Name:</dt>
    <dd class="col-sm-10">@Model.FullName</dd>

    <dt class="col-sm-2">Email:</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Phone:</dt>
    <dd class="col-sm-10">@Model.Phone</dd>

    <dt class="col-sm-2">Address:</dt>
    <dd class="col-sm-10">@Model.Address</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AdopterID" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
