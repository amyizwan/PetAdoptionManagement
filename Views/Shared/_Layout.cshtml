<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Pet Adoption Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        /* Pink Theme */
        body {
            background-color: #ffe6f2;
            color: #333;
        }

        .navbar {
            background-color: #ff69b4 !important;
        }

        .navbar-brand, .nav-link {
            color: black !important;
            font-weight: bold;
        }

        .navbar-toggler-icon {
            filter: brightness(0) invert(1);
        }

        .container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg" style="background-color: #ff69b4;">
        <div class="container">
            <a class="navbar-brand fw-bold text-black" asp-controller="Home" asp-action="Index">🐾 Pet Adoption</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-black" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-black" asp-controller="Pet" asp-action="Index">Pets</a></li>
                    <li class="nav-item"><a class="nav-link text-black" asp-controller="Adopter" asp-action="Index">Adopters</a></li>
                    <li class="nav-item"><a class="nav-link text-black" asp-controller="About" asp-action="Index">About Us</a></li>
                    <li class="nav-item"><a class="nav-link text-black" asp-controller="Volunteer" asp-action="Index">Volunteer</a></li>
                    <li class="nav-item"><a class="nav-link text-black" asp-controller="Contact" asp-action="Index">Contact</a></li>
                    <li class="nav-item"><a class="nav-link text-black" asp-controller="FAQ" asp-action="Index">FAQ</a></li>
                </ul>
            </div>
        </div>
    </nav>



    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
