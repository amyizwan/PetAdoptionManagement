@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <h1 class="text-center fw-bold">🐾 Welcome to Pet Adoption Management System 🐾</h1>
    <p class="text-center lead">Easily manage pets and adopters with an intuitive interface.</p>

    <div class="row mt-5">
        <!-- Pets Summary -->
        <div class="col-md-6">
            <div class="card border-primary shadow-lg">
                <div class="card-body text-center">
                    <h3 class="card-title">🐶 Pets Available</h3>
                    <h4 class="display-6 fw-bold">@ViewData["TotalPets"] Pets</h4>
                    <p class="card-text">Manage all available pets.</p>
                    <a asp-controller="Pet" asp-action="Index" class="btn btn-primary">📋 View Pets</a>
                    <a asp-controller="Pet" asp-action="Create" class="btn btn-success">➕ Add New Pet</a>
                </div>
            </div>
        </div>

        <!-- Adopters Summary -->
        <div class="col-md-6">
            <div class="card border-success shadow-lg">
                <div class="card-body text-center">
                    <h3 class="card-title">👨‍👩‍👧 Adopters</h3>
                    <h4 class="display-6 fw-bold">@ViewData["TotalAdopters"] Adopters</h4>
                    <p class="card-text">Manage all adopters and their details.</p>
                    <a asp-controller="Adopter" asp-action="Index" class="btn btn-primary">📋 View Adopters</a>
                    <a asp-controller="Adopter" asp-action="Create" class="btn btn-success">➕ Add New Adopter</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Latest Pets -->
    <h3 class="mt-5 fw-bold text-primary">📌 Recently Added Pets</h3>
    <div class="table-responsive">
        <table class="table table-striped table-bordered shadow-lg">
            <thead class="table-dark text-center">
                <tr>
                    <th>Name</th>
                    <th>Breed</th>
                    <th>Age</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pet in (List<Pet>)ViewData["RecentPets"])
                {
                    <tr class="text-center">
                        <td class="fw-bold">@pet.Name</td>
                        <td>@pet.Breed</td>
                        <td>@pet.Age years</td>
                        <td>
                            <span class="badge @(pet.Status == "Available" ? "bg-success" : "bg-warning")">
                                @pet.Status
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Latest Adopters -->
    <h3 class="mt-5 fw-bold text-success">📌 Recent Adopters</h3>
    <div class="table-responsive">
        <table class="table table-striped table-bordered shadow-lg">
            <thead class="table-dark text-center">
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var adopter in (List<Adopter>)ViewData["RecentAdopters"])
                {
                    <tr class="text-center">
                        <td class="fw-bold">@adopter.FullName</td>
                        <td>@adopter.Email</td>
                        <td>@adopter.Phone</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Footer -->
    <div class="text-center mt-5">
        <p class="text-muted">&copy; @DateTime.Now.Year Pet Adoption Management System | 🐾 Adopt, Love, Repeat 🐾</p>
    </div>
</div>
